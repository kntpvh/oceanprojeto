@model Equipe

@{
    ViewData["Title"] = "Equipes";


} 
<link rel="stylesheet" href="~/css/boootstrap.css" />
<form method="POST" action='@Url.Action("Cadastrar")'>
    <div class="form-group">
    <label>ID</label>
    <input type="text" name="Id" class="form-control" placeholder="ID"/>

    <label>Nome</label>
    <input type="text" name="Nome" class="form-control" placeholder="Nome"/>

    <label>Imagem</label>
    <input type="text" name="Imagem" class="form-control" placeholder="Caminho imagem"/>

    <button type="submit" class="btn btn-primary" >Cadastrar</button>
    </div>
</form>

<table class="table table-striped table-responsive">
    <thead>

        <tr>
            <th>Id</th>
        <th>Nome</th>
        <th>Imagem</th>
        </tr>
    </thead>
    <tbody>
        @foreach(Equipe e in ViewBag.equipe){
            <tr>
                <td>@e.Id</td>
                <td>@e.Nome</td>
                <td>@e.Imagem</td>
            </tr>
        }
    </tbody>
</table>
